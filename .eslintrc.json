{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "amd": true,
        "shared-node-browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2016
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0

    },
    "globals": {
        "angular": false,
        "module": false,
        "inject": false
      }    
}